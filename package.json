{
  "name": "ad4m-host",
  "version": "0.0.1",
  "description": "Self hosting ad4m service",
  "bin": {
    "ad4m": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build-holochain": "echo \"\n\n\n\nThis next stage will fail if Nix is not installed!! You can install here: https://nixos.wiki/wiki/Nix_Installation_Guide\" && sleep 5 && nix-shell --run ./scripts/copy-hc.sh",
    "get-languages": "node scripts/get-builtin-test-langs.js",
    "publish-languages": "node scripts/publish-langs",
    "ad4m": "node bin/ad4m",
    "serve-launcher": "node bin/serve-launcher",
    "package": "pkg . --targets node14-macos-x64 --output dist/ad4m",
    "postinstall": "rm -rf node_modules/ipfs-core-types/src"
  },
  "pkg": {
    "assets": [
      "build/**/*",
      "temp/**/*"
    ],
    "outputPath": "dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaichaosun/ad4m-host.git"
  },
  "keywords": [
    "Holochain"
  ],
  "author": "Kaichao Sun",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kaichaosun/ad4m-host/issues"
  },
  "homepage": "https://github.com/kaichaosun/ad4m-host#readme",
  "dependencies": {
    "@apollo/client": "^3.3.21",
    "@perspect3vism/ad4m": "^0.1.22",
    "ad4m-executor-test": "0.1.28",
    "appdata-path": "^1.0.0",
    "esm": "^3.2.25",
    "fs-extra": "^9.1.0",
    "node-wget-js": "^1.0.1",
    "unzipper": "^0.10.11",
    "ws": "^8.3.0",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.8",
    "@types/yargs": "^17.0.8",
    "@vercel/ncc": "^0.33.1",
    "pkg": "^5.5.2",
    "typescript": "^4.5.4"
  }
}
